<%= form_for @event do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :date %>
<%= f.date_field :date %>

<%= f.label :location %>
<%= f.text_field :location %>
  

    <%= f.label :designer %>
